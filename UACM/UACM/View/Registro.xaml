<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UACM.Registro"
             Title="Registro">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Nombre"/>
            <Entry Placeholder="Apellidos"/>
            <Entry Placeholder="Correo Institucional"/>
            <Entry Placeholder="Contraseña" IsPassword="True"/>
            <Entry Placeholder="Repetir Contraseña" IsPassword="True"/>

            <Label Text="Grabar Voz" FontSize="Medium" HorizontalTextAlignment="Center" />
            <ImageButton Source="mic.jpg" HeightRequest="60"
                             WidthRequest="60" HorizontalOptions="Center" CornerRadius="100" x:Name="btnAudio" 
                         BackgroundColor="Transparent"  Margin="0,10,0,-10" />

            <StackLayout Orientation="Vertical" Margin="50,50,50,0" Spacing="10">
                <Button Text="Acetpar" TextColor="White" BackgroundColor="#5E2129" />
                <Button Text="Cancelar" TextColor="White" BackgroundColor="#5E2129" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>